{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sctgdesk-api-server'",
            "cargo": {
                "args": [
                    "build"
                ],
                "filter": {
                    "name": "sctgdesk-api-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE":"0",
                "RUST_LOG": "debug",
                "OAUTH2_CREATE_USER": "1",
                "OAUTH2_CONFIG_FILE": "${workspaceFolder}/.oauth2.toml",
                "S3CONFIG_FILE": "${workspaceFolder}/.s3config.toml",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tests 'sctgdesk-api-server'",
            "cargo": {
                "args": [
                    "test"
                ],
                "filter": {
                    "name": "sctgdesk-api-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug",
            },
        }
    ]
}